{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "CNC Plugin Registry Schema",
  "type": "object",
  "required": ["version", "plugins", "categories"],
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Registry schema version"
    },
    "plugins": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "name", "description", "author", "version", "downloadUrl", "manifestUrl", "category"],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^[a-z0-9-]+$",
            "description": "Unique plugin identifier"
          },
          "name": {
            "type": "string",
            "minLength": 1,
            "maxLength": 100,
            "description": "Plugin display name"
          },
          "description": {
            "type": "string",
            "minLength": 10,
            "maxLength": 500,
            "description": "Brief plugin description"
          },
          "author": {
            "type": "string",
            "minLength": 1,
            "maxLength": 100,
            "description": "Plugin author"
          },
          "version": {
            "type": "string",
            "pattern": "^\\d+\\.\\d+\\.\\d+$",
            "description": "Current plugin version"
          },
          "downloadUrl": {
            "type": "string",
            "format": "uri",
            "description": "Direct download URL for plugin package"
          },
          "manifestUrl": {
            "type": "string",
            "format": "uri",
            "description": "URL to plugin manifest file"
          },
          "category": {
            "type": "string",
            "enum": ["monitoring", "control", "visualization", "utility", "automation", "management"],
            "description": "Plugin category"
          },
          "tags": {
            "type": "array",
            "items": {
              "type": "string",
              "minLength": 2,
              "maxLength": 20
            },
            "maxItems": 10,
            "description": "Search tags"
          },
          "minAppVersion": {
            "type": "string",
            "pattern": "^\\d+\\.\\d+\\.\\d+$",
            "description": "Minimum required application version"
          },
          "maxAppVersion": {
            "type": "string",
            "pattern": "^\\d+\\.\\d+\\.\\d+$",
            "description": "Maximum supported application version"
          },
          "lastUpdated": {
            "type": "string",
            "format": "date-time",
            "description": "Last update timestamp"
          },
          "downloads": {
            "type": "integer",
            "minimum": 0,
            "description": "Download count"
          },
          "rating": {
            "type": "number",
            "minimum": 0,
            "maximum": 5,
            "description": "Average user rating"
          },
          "featured": {
            "type": "boolean",
            "description": "Whether plugin is featured",
            "default": false
          }
        },
        "additionalProperties": false
      },
      "description": "List of available plugins"
    },
    "categories": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": ["monitoring", "control", "visualization", "utility", "automation", "management"]
      },
      "uniqueItems": true,
      "description": "Available plugin categories"
    },
    "lastUpdated": {
      "type": "string",
      "format": "date-time",
      "description": "Registry last update timestamp"
    },
    "metadata": {
      "type": "object",
      "properties": {
        "totalPlugins": {
          "type": "integer",
          "minimum": 0
        },
        "totalDownloads": {
          "type": "integer",
          "minimum": 0
        },
        "activePlugins": {
          "type": "integer",
          "minimum": 0
        }
      },
      "description": "Registry statistics"
    }
  },
  "additionalProperties": false
}